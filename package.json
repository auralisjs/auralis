{
  "name": "auralis-monorepo",
  "version": "0.1.0",
  "description": "Monorepo for Auralis packages",
  "scripts": {
    "clean": "git clean -fdx",
    "build": "pnpm -r build",
    "example:cat-rest-api": "pnpm --filter cat-rest-api-example run dev",
    "format": "prettier --cache --write .",
    "lint": "eslint --cache --cache-strategy content .",
    "ts-check": "tsc && pnpm -r ts-check",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "preflight": "pnpm install && run-s format build lint test ts-check",
    "release": "pnpm build && changeset publish"
  },
  "private": true,
  "homepage": "https://github.com/auralisjs/auralis",
  "bugs": {
    "url": "https://github.com/auralisjs/auralis/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/auralisjs/auralis.git"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/Shinigami92"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.com/donate/?hosted_button_id=L7GY729FBKTZY"
    }
  ],
  "license": "MIT",
  "author": {
    "name": "Christopher Quadflieg",
    "email": "chrissi92@hotmail.de",
    "url": "https://github.com/Shinigami92"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.6",
    "@eslint/compat": "1.3.2",
    "@eslint/config-helpers": "0.3.1",
    "@eslint/js": "9.33.0",
    "@stylistic/eslint-plugin": "5.2.3",
    "@types/node": "24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "1.3.4",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-unicorn": "60.0.0",
    "jiti": "2.5.1",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-pkg": "0.21.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.1",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=24.0.0"
  }
}
